<resources>

	<!-- Base application theme. -->
	<style name="Theme.ApplicationBase" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!-- Splash theme -->
	<style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_screen</item>
		<item name="colorPrimaryDark">@android:color/transparent</item>
	</style>

	<!--Theme used by the startup activity-->
	<style name="Theme.Startup" parent="@style/Theme.ApplicationBase">
		<item name="android:windowBackground">@android:color/white</item>
		<item name="colorPrimary">@color/skyBlue</item>
		<item name="colorPrimaryDark">@color/pitchBlack</item>
		<item name="colorControlNormal">@color/sunRise</item>
	</style>

	<!-- Application theme. -->
	<style name="Theme.Home" parent="@style/Theme.ApplicationBase">
		<!-- Customize your theme here. -->
		<item name="android:windowBackground">@android:color/white</item>
		<item name="colorPrimary">@color/skyBlue</item>
		<item name="colorPrimaryDark">@color/pitchBlack</item>
		<item name="colorAccent">@color/sunRise</item>
		<item name="colorControlNormal">@color/sunRise</item>
		<item name="android:textColorPrimary">@color/slateGrey</item>
	</style>

</resources>
